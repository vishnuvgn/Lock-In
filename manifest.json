{
  "manifest_version": 3,
  "name": "Lock In",
  "version": "0.7.0",
  "description": "Stay focused by blocking distracting sites.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "storage",
    "alarms",
    "tabs",
    "webNavigation"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "32": "icons/icon32.png",
    "38": "icons/icon38.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "worker.js" },
  "action": { 
    "default_title": "Lock In",
    "default_popup": "options.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "19": "icons/icon19.png",
      "32": "icons/icon32.png",
      "38": "icons/icon38.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "blocked.html",
        "blocked.js",
        "icons/*.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
